{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@afrimomo/*": ["src/*"],
      "@afrimomo/config/*": ["src/config/*"],
      "@afrimomo/services/*": ["src/services/*"],
      "@afrimomo/types/*": ["src/types/*"],
      "@afrimomo/utils/*": ["src/utils/*"]
    },
    "lib": ["ES2022"],
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
